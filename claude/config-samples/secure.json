{
  "mcpServers": {
    "claude-code-restricted": {
      "command": "claude",
      "args": ["mcp", "serve"],
      "env": {
        "CLAUDE_RESTRICT_FILE_ACCESS": "true",
        "CLAUDE_ALLOWED_PATHS": "/workspace,/project"
      }
    },
    "claude-code-bypass": {
      "command": "claude", 
      "args": ["mcp", "serve", "--dangerously-skip-permissions"]
    }
  }
}